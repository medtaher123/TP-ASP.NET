@model TP3.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h2>Create Customer</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MembershiptypeId" class="control-label">Membership Type</label>
        <select asp-for="MembershiptypeId" class="form-control" asp-items="@ViewBag.member"></select>
        <span asp-validation-for="MembershiptypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Select Movies</label>
        @foreach (var movie in ViewBag.movies)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="selectedMovies" value="@movie.Value" /> @movie.Text
                </label>
            </div>
        }
        <span asp-validation-for="Movies" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

    @if (ViewBag.Errors != null)
    {
        <div class="text-red ml">
            <ul>
                @foreach (string error in ViewBag.Errors)
                {
                    <li class="ml">@error</li>
                }
            </ul>
        </div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
