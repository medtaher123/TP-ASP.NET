@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movies List";
}

<h1>Movies List</h1>

<p>
    <a class="btn btn-primary" asp-controller="Movie" asp-action="Create">Add New Movie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Name</td>
                <td>
                    <a class="btn btn-info" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>